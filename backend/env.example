# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/bitwreckers
DATABASE_URL_TEST=postgresql://user:password@localhost/bitwreckers_test

# Security
SECRET_KEY=your-super-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=Bitwreckers <noreply@bitwreckers.com>

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Environment
ENVIRONMENT=development
DEBUG=True

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Bitwreckers API
VERSION=1.0.0
